generator client {
  provider = "prisma-client-js"
}

datasource db {
   provider = "mysql"
   url      = "mysql://root:root@localhost:3306/node_app

model Artist {
  id              Int           @id @default(autoincrement())
  name            String        @db.VarChar(255)
  nickName        String        @db.VarChar(255)
  gender          Int
  country         Int
  careerStartYear Int
  Albums          ArtistAlbum[]
}

model Album {
  id      Int           @id @default(autoincrement())
  name    String        @db.VarChar(255)
  Artists ArtistAlbum[]
}

model ArtistAlbum {
  artist   Artist @relation(fields: [artistId], references: [id])
  artistId Int
  album    Album  @relation(fields: [albumId], references: [id])
  albumId  Int

  @@unique([artistId, albumId])
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
}
